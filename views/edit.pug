extends layout.pug

block contentSection
	section.task-editor
		.container
			form.task-editor__form(id=`${task._id}` action="" method="")
				div.form-row.flex-column.align-items-center
					div.form-group.col-md-7.col-sm-12
						h1.task-editor__header Edit the task
				div.form-row.flex-column.align-items-center
					div.form-group.col-md-6.col-sm-12
						label(for="inputNewTaskName") Name
						input#inputNewTaskName.form-control(name="name" type="text" value=`${task.name}`)
				div.form-row.d-flex.flex-row.justify-content-center
					div.form-group.col-md-3.col-sm-12
						label(for="inputNewTaskPriority") Priority
						select#inputNewTaskPriority.form-control(name="priority")
							-var priorities = ['Trivial','Major','Blocker']
							each priority in priorities
								if priority == task.priority
									option(selected)= priority
								else
									option= priority
					div.form-group.col-md-3.col-sm-12
						label(for="inputNewTaskStatus") Status
						select#inputNewTaskStatus.form-control(name="status")
							-var statuses = ['w8ing','in Progress','Done']
							each status in statuses
								if status == task.status
									option(selected)= status
								else
									option= status
				div.form-row.flex-row.justify-content-center
					div.form-group.col-6.d-flex.flex-row.justify-content-end
						label.task-editor__submit-mark.task-editor__icon(for="editBtn")
							include ../public/images/check-circle-solid.svg
							button#editBtn.task-editor__edit-btn(type="edit")
						label.task-editor__reject-mark.task-editor__icon(for="cancelBtn")
							include ../public/images/times-circle-solid.svg
							button#cancelBtn.task-editor__edit-btn(type="cancel")
